{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules"
  ],
  "linterOptions": {
    "exclude": [ // exclude test files and anything generated by the Angular CLI
      "**/*-spec.ts",
      "**/*.spec.ts",
      "src/*.ts",
      "src/environments/*",
      "e2e/**"
    ]
  },
  "defaultSeverity": "warning",
  "rules": {
    "component-selector": "app",
    "interface-over-type-literal": false,
    "no-unnecessary-type-assertion": false,
    "prefer-object-spread": false, //there is currently a TypeScript bug with this in certain scenarios https://github.com/Microsoft/TypeScript/issues/10727
    "no-empty": false, //the AutoUnsubscribe directive requires empty ngOnDestroy methods in components
    "typedef": {
      "severity": "error",
      "options": [
        "call-signature",
        "parameter",
        "property-declaration"
      ]
    },
    "no-console": true,
    "max-file-line-count": [
      true,
      1000
    ],
    "unnecessary-constructor": false,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "prefer-function-over-method": false
  }
}
